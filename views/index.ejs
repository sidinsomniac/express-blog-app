<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1>Today is <%=date%></h1>
    </div>
    <div class="box">
        <% for(let i = 0; i < items.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= items[i] %></p>
        </div>
        <% } %>
        <form class="box" action="/" method="post">
            <input name="newTodo" placeholder="New Item" type="text" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

</body>

</html>